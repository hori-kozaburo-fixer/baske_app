<div class="row match-to-row d-flex justify-content-center">
  <div class="col-lg-4 col-sm-6">
    <div class="thumbnail">
    <%= link_to discussion_tweet_path(tweet.id)  do %>
      <%= image_tag tweet.image, class:"img-fluid" %>
      <p><%= tweet.name%></p>
      <p><%= tweet.text %></p>
      <span>投稿者</span><%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id) %>
    <% end %>
    </div>
  </div>
</div>
